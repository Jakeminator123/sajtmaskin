{
  "database": {
    "driver": "pg",
    "dialect": "postgresql",
    "envOverride": "POSTGRES_URL",
    "host": "Supabase (pooled connection)"
  },
  "drizzle": {
    "schemaFile": "src/lib/db/schema.ts",
    "clientFile": "src/lib/db/client.ts",
    "configFile": "drizzle.config.ts",
    "dialect": "postgresql"
  },
  "rateLimit": {
    "mode": "upstash | memory",
    "notes": "Upstash preferred (UPSTASH_REDIS_REST_URL + TOKEN). Falls back to in-memory if not configured."
  },
  "auth": {
    "method": "JWT cookie (httpOnly)",
    "cookie": "sajtmaskin_auth",
    "providers": ["email", "google", "github"],
    "guestSessions": "sajtmaskin_session cookie (30 days)"
  }
}
